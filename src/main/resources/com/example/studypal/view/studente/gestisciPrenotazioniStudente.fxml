                  <InnerShadow blurType="ONE_PASS_BOX" height="11.0" radius="5.0" width="11.0"/>
              </effect>
          </Button>
        </children>
    </AnchorPane>
    <Text fx:id="titolo" fill="#000000ac" layoutX="273.0" layoutY="74.0" strokeType="OUTSIDE" strokeWidth="0.0"
          text="Gestione Prenotazioni" textAlignment="CENTER" wrappingWidth="452.71179151535034">
